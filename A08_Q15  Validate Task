
public class A08_Q15 {

	public static void main(String[] args) {

		System.out.println(validateTask(true,2,1));
		System.out.println(validateTask(true,3,1));
		System.out.println(validateTask(false,3,2));
		
	}
	public static boolean validateTask(boolean isEmpty, int nextID, int currentID) {
		return (isEmpty && ((nextID - currentID) == 1));
	}
